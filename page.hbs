{{!< default}}

{{#page}}
<article class="post">
    {{#if @page.show_title_and_feature_image}}
    <header class="post-header">
        {{#if feature_image}}
        <figure class="post-feature-image">
            <img src="{{feature_image}}" alt="{{title}}">
        </figure>
        {{/if}}
        <h1>{{title}}</h1>
        <div class="post-meta">
            {{date published_at format="YYYY-MM-DD"}}
        </div>
    </header>
    {{/if}}
    <div class="post-content">
        {{content}}
    </div>
</article>
{{/page}}
