{{!< default}}

{{#page}}
<article class="post">
    {{#if @page.show_title_and_feature_image}}
    <header class="post-header">
        {{#if feature_image}}
        <figure class="post-feature-image">
            <img src="{{feature_image}}" alt="{{title}}">
        </figure>
        {{/if}}
        <h1>{{title}} <span class="post-date">({{date published_at format="YYYY-MM-DD"}})</span></h1>
    </header>
    {{/if}}
    <div class="post-content">
        {{content}}
    </div>
</article>
{{/page}}
