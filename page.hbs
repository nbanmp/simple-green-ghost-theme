{{!< default}}

{{#page}}
<article class="post">
    <header class="post-header">
        <h1>{{title}}</h1>
        <div class="post-meta">
            {{date published_at format="YYYY-MM-DD"}}
        </div>
    </header>
    <div class="post-content">
        {{content}}
    </div>
</article>
{{/page}}
